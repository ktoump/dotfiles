# Global properties - these are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/lib/i3block/$BLOCK_NAME
color=#c0c5ce

[mpd]
command=$HOME/.dotfiles/i3wm/i3bar/mpd.sh
interval=5
label=

[email]
command=$HOME/.dotfiles/i3wm/i3bar/unread_mails.sh
interval=120
label=

[bandwidth]
command=/usr/lib/i3blocks/bandwidth
interval=1
label=

[load]
command=$HOME/.dotfiles/i3wm/i3bar/load_average.sh
interval=60
label=

[disk]
command=$HOME/.dotfiles/i3wm/i3bar/disk.sh
interval=3600
label=

[volume]
command=v=`/usr/lib/i3blocks/volume`; if [ "$v" = "MUTE" ]; then echo " ---"; else echo " $v"; fi
instance=Master
interval=once
signal=1

[language]
command=$HOME/.dotfiles/i3wm/i3bar/lang.sh
interval=once
signal=1
label=

[date]
command=date '+ %A, %d %B'
interval=3600
label=

[clock]
command=date '+ %R'
interval=60
label=
