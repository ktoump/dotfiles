# Global properties - these are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
align=center
command=$DOTFILES/i3wm/i3bar/$BLOCK_NAME
color=#93a1a1
separator_block_width=10
markup=pango

[mpd]
interval=5
label=

[counter]
interval=120
label=

[unread_mails]
interval=120
label=

[wifi]
interval=2
label=

[bandwidth]
command=/usr/lib/i3blocks/bandwidth
interval=1
label=

[vpn]
interval=10
label=VPN

[load_average]
interval=60
label=

[memory]
label=
instance=mem;free
interval=30

[temperature]
command=/usr/lib/i3blocks/temperature
label=
interval=5

[disk]
interval=3600
label=

[volume]
command=v=`/usr/lib/i3blocks/volume`; if [ "$v" = "MUTE" ]; then echo " ---"; else echo " $v"; fi
instance=Master
interval=once
signal=1

[battery]
interval=15
label=

[lang]
interval=once
signal=1
label=

[date]
command=date '+ %A, %d %B'
interval=3600
label=

[clock]
command=date '+ %R'
interval=60
label=
